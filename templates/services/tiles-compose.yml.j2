services:
  nginx:
    image: nginx:latest
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    depends_on: 
      - tiles
      - tileserver

  tiles:
    image: ubuntu:latest
    command: tiles
    ports:
      - "{{ http_port | default(8002) }}:80"
    volumes:
      - /bin:/bin
      - ./config.toml:/config.toml
    depends_on:
      - tileserver

  tileserver:
    image: maptiler/tileserver-gl:latest
    ports:
      - "8080:8080"
    volumes:
      - /data/tiles:/data/tiles
      - /data/tileserver:/data